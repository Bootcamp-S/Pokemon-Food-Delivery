type: http
name: Seyfert shortcut
request:
  method: GET
  url: {{baseUrl}}/api/index
  query:
    name: seyfert
tests:
  - name: status 200
    script: |
      expect(response.status).to.equal(200);
  - name: schema
    script: |
      const b = response.json();
      expect(b.name).to.equal('Marcus');
      expect(b.id).to.equal(42);
      expect(b.types).to.deep.equal(['seyfert']);
      expect(b.favoriteFood).to.equal('Coffee');
